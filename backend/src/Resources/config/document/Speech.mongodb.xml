<doctrine-mongo-mapping xmlns="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping
                    http://doctrine-project.org/schemas/odm/doctrine-mongo-mapping.xsd">

    <embedded-document name="App\Document\Speech">
        <field field-name="topic" type="string" />
        <field field-name="speaker" type="string" />
        <field field-name="startTime" type="int" />
        <field field-name="endTime" type="int" />
    </embedded-document>
</doctrine-mongo-mapping>